  <li>Home</a></li>
  <li class="active">Manage Assignments</a></li>
</ol>

<br/>

<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Assignments</h2>
<button class="btn btn-success" id="addAssignmentButton">Add Assignment</button>
<table class="table table-striped table-bordered" id="assignmentTable" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Student ID</th>
      <th>Assignment Number</th>
      <th>Grade ID</th>
      <th>Assignment ID</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof assignments != "undefined" && assignments.length > 0){ %>
    <% assignments.forEach(function(assignments){ %>
      <tr>
        <td><%= assignments.assignment_id %></td>
        <td><%= assignments.student_id %></td>
        <td><%= assignments.assignment_nbr %></td>
        <td><%= assignments.grade_id %></td>
        <td><%= assignments.class_id %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-assignmentid="<%= assignments.assignment_id %>">edit</button>&nbsp;
          <button class="btn btn-danger" id="deleteButton" data-assignmentid="<%= assignments.assignment_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_assignment" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="assignment_id">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageAssignmentForm">
  <input type="hidden" name="assignment_id">
  <div class="form-group">
    <label for="student_id" class="col-sm-2 control-label">Student ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="student_id" name="student_id"  placeholder="Student ID" required>
    </div>
  </div>
  <div class="form-group">
    <label for="assignment_nbr" class="col-sm-2 control-label">Assignment Number</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="assignment_nbr" name="assignment_nbr" placeholder="1 - 100" required>
    </div>
  </div>
  <div class="form-group">
    <label for="grade_id" class="col-sm-2 control-label">Grade ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="grade_id" name="grade_id" placeholder="1 - 5" required>
    </div>
  </div>
  <div class="form-group">
    <label for="class_id" class="col-sm-2 control-label">Class ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="class_id" name="class_id" placeholder="1 - 36" required>
    </div>
  </div>
</form>
