<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Majors</h2>
<button class="btn btn-success" id="addMajorButton">Add Major</button>
<table class="table table-striped table-bordered" id="majorTable" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Major</th>
      <th>Min SAT Score</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof majors != "undefined" && majors.length > 0){ %>
    <% majors.forEach(function(majors){ %>
      <tr>
        <td><%= majors.major_id %></td>
        <td><%= majors.major %></td>
        <td><%= majors.sat %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-majorid="<%= majors.major_id %>">edit</button>&nbsp;
          <button class="btn btn-danger" id="deleteButton" data-majorid="<%= majors.major_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_major" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="major_id">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageMajorForm">
  <input type="hidden" name="major_id">
  <div class="form-group">
    <label for="major" class="col-sm-2 control-label">Major</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="major" name="major"  placeholder="Major" required>
    </div>
  </div>
  <div class="form-group">
    <label for="sat" class="col-sm-2 control-label">Min SAT Score</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="sat" name="sat"  placeholder="400 - 1400" required>
    </div>
  </div>
</form>
