<ol class="breadcrumb">
  <li>Home</a></li>
  <li class="active">Manage Student Classes</a></li>
</ol>

<br/>

<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Student Classes</h2>
<button class="btn btn-success" id="addStudent_ClassButton">Add Student Class</button>
<table class="table table-striped table-bordered" id="student_classTable" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Student ID</th>
      <th>Class ID</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof student_classes != "undefined" && student_classes.length > 0){ %>
    <% student_classes.forEach(function(student_classes){ %>
      <tr>
        <td><%= student_classes.student_class_id %></td>
        <td><%= student_classes.student_id %></td>
        <td><%= student_classes.class_id %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-student_classid="<%= student_classes.student_class_id %>">edit</button>&nbsp;
          <button class="btn btn-danger" id="deleteButton" data-student_classid="<%= student_classes.student_class_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_student_class" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="student_class_id">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageStudent_ClassForm">
  <input type="hidden" name="student_class_id">
  <div class="form-group">
    <label for="student_id" class="col-sm-2 control-label">Student ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="student_id" name="student_id"  placeholder="Student ID" required>
    </div>
  </div>
  <div class="form-group">
    <label for="class_id" class="col-sm-2 control-label">Class ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="class_id" name="class_id"  placeholder="Class ID" required>
    </div>
  </div>
</form>
